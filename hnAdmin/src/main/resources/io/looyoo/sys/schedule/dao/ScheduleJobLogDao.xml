<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.looyoo.sys.schedule.dao.ScheduleJobLogDao">
<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="io.looyoo.sys.schedule.entity.ScheduleJobLogEntity">
		<id column="log_id" property="logId" />
		<result column="job_id" property="jobId" />
		<result column="bean_name" property="beanName" />
		<result column="method_name" property="methodName" />
		<result column="params" property="params" />
		<result column="status" property="status" />
		<result column="error" property="error" />
		<result column="times" property="times" />
		<result column="create_time" property="createTime" />
	</resultMap>
	<select id="queryList" resultMap="BaseResultMap" >
		select * from schedule_job_log 
		<where>
			<if test="jobId != null">
				and job_id = #{jobId}
			</if>
		</where>
		order by log_id desc 
	</select>
	<select id="queryTotal" resultType="int">
		select count(*) from schedule_job_log
		<where>
			<if test="jobId != null">
				and job_id = #{jobId}
			</if>
		</where>
	</select>
</mapper>